@model LoanDetailsViewModel

@{
    ViewData["Title"] = "Loan Details";
}

<h2>@ViewData["Title"]</h2>

<div class="p-5">
    
    <form enctype="multipart/form-data" class="mt-3">
        <div class="form-group row mb-4">
            <label class="col-sm-3 col-form-label">Client</label>
            <div class="col-sm-9">
                <select asp-for="ClientId" asp-items="@ViewBag.Clients" class="form-control" disabled></select>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label asp-for="TelephoneNr" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="TelephoneNr" class="form-control" readonly>
                <span asp-validation-for="TelephoneNr" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label asp-for="Amount" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Amount" class="form-control" readonly>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label class="col-sm-3 col-form-label">Periods</label>
            <div class="col-sm-9">
                <select asp-for="LoanPeriod" asp-items="@ViewBag.LoanPeriods" class="form-control" disabled></select>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label asp-for="InterestRate" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="InterestRate" class="form-control" readonly>
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label asp-for="PayoutDate" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="PayoutDate" type="date" class="form-control" readonly>
                <span asp-validation-for="PayoutDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="InvoicesList" class="col-sm-4 col-form-label mb-3"></label>
            <div class="col-sm-12">
                <div class="table-responsive-sm">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Invoice No</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">Amount</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var invoice in Model.InvoicesList)
                        {
                            <tr>
                                <td>@invoice.OrderNr</td>
                                <td>@invoice.InvoiceNr</td>
                                <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                                <td>@invoice.Amount</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>